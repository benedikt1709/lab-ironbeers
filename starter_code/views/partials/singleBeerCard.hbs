<div class="card" style="width: 33.333%;">
  <img class="card-img-top" src="{{this.image_url}}" alt="Card image cap" style="width: 20%;">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <p>Food pairing:</p>
    {{!-- <p class="card-text">{{this.food_pairing}}</p> --}}
    <ul>
      {{#each this.food_pairing}}
        <li class="card-text">{{this}}</li>
      {{/each}}    
    </ul>
  </div>
</div>